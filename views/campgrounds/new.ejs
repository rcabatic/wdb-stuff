<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center">
		Create a New Campground
		</h1>
		<div style="width:30%; margin:25px auto;"> <!-- inline styling for now -->
			<form action="/campgrounds" method="POST">
				<div class="form-group"> <!--Gives Spacing-->
					<input class="form-control" type="text" placeholder="Name" name="name">
				</div>
				<div class="form-group"> 
					<input class="form-control" type="text" placeholder="Price" name="price" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Image URL" name="image">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Description" name="description">
				</div>
				<div class="form-group">
					<button class="btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
			<a href="/campgrounds"> Back to All Campgrounds</a>
		</div>


	</div>

</div>
<%- include("../partials/footer") %>