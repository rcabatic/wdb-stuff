<%- include("../partials/header") %>
 
<div class="container">
	<div class="row">
		<h1 style="text-align: center">
		Add New Comment to <%= campground.name %>
		</h1>
		<div style="width:30%; margin:25px auto;"> <!-- inline styling for now -->
			<form action="/campgrounds/<%=campground._id%>/comments" method="POST">
				<div class="form-group"> <!--Gives Spacing-->
					<input class="form-control" type="text" placeholder="Comment Here" name="comment[text]">
				</div>
				<div class="form-group">
					<button class="btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
			<a href="/campgrounds"> Back to All Campgrounds</a>
		</div>


	</div>

</div>
<%- include("../partials/footer") %>