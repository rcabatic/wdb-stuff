<%- include("../partials/header") %>
 
<div class="container">
	<div class="row">
		<h1 style="text-align: center">
		Edit Comment
		</h1>
		<div style="width:30%; margin:25px auto;"> <!-- inline styling for now -->
			<!-- note campground_id is a variable -->
			<form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
				<div class="form-group"> <!--Gives Spacing-->
					<input class="form-control" type="text" value="<%= comment.text %>" name="comment[text]">
				</div>
				<div class="form-group">
					<button class="btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
			<a href="/campgrounds"> Back to All Campgrounds</a>
		</div>


	</div>

</div>
<%- include("../partials/footer") %>